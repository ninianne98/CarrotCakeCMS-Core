@model CarrotFaqItem

@if (Model.FaqItemId != Guid.Empty) {
	<div style="clear:both">
		<ul>
			<li>
				@Html.DisplayNameFor(model => model.Caption)
				&mdash;
				@Html.DisplayFor(model => model.Caption)
			</li>

			<li>
				@Html.DisplayNameFor(model => model.Question)
				&mdash;
				@Html.Raw(Model.Question)
			</li>

			<li>
				@Html.DisplayNameFor(model => model.Answer)
				&mdash;
				@Html.Raw(Model.Answer)
			</li>

			<li>
				@Html.DisplayNameFor(model => model.ItemOrder)
				&mdash;
				@Html.DisplayFor(model => model.ItemOrder)
			</li>

			<li>
				@Html.DisplayNameFor(model => model.IsActive)
				&mdash;
				@Html.DisplayFor(model => model.IsActive)
			</li>
		</ul>
	</div>

}