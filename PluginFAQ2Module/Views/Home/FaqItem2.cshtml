@model CarrotFaqItem

@if (Model.FaqItemId != Guid.Empty) {
	<div style="clear:both">
		<div>
			@Html.DisplayFor(m => m.Caption)
		</div>

		<div style="clear:both">
			<div style="float:left;margin-right:10px;">
				Q:
			</div>
			<div style="float:left">
				@Html.Raw(Model.Question)
			</div>
		</div>
		<div style="clear:both">
			<div style="float:left;margin-right:10px;">
				A:
			</div>
			<div style="float:left">
				@Html.Raw(Model.Answer)
			</div>
		</div>
	</div>

}